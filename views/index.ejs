           document.addEventListener("DOMContentLoaded", function () {
               window.ApexCharts && (new ApexCharts(document.getElementById('chart-tasks-overview'), {
                   chart: {
                       type: "line",
                       fontFamily: 'inherit',
                       height: 240,
